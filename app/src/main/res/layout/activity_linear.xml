<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    tools:context=".Linear">

    <LinearLayout
        android:id="@+id/PrimerLineal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSiguiente"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:onClick="Siguiente"
            android:text="Siguiente" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/SegundoLineal"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="#00BCD4"
        android:backgroundTint="#00BCD4"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opción 1"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opción 2"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Opción 3"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TercerLineal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/Estrella"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:backgroundTint="#A5A4A4"
            android:text="a"
            android:textColor="#A5A4A4"
            app:icon="@android:drawable/btn_star_big_on"
            app:iconGravity="textTop"
            app:iconTint="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/microfono"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:backgroundTint="#A5A4A4"
            android:text="a"
            android:textColor="#A5A4A4"
            app:icon="@android:drawable/ic_btn_speak_now"
            app:iconGravity="textTop" />

        <Button
            android:id="@+id/candado"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#A5A4A4"
            android:text="a"
            android:textColor="#A5A4A4"
            app:icon="@android:drawable/ic_lock_idle_lock"
            app:iconGravity="textTop"
            app:iconTint="@android:color/holo_blue_light" />

    </LinearLayout>
</LinearLayout>